<Window x:Class="SierraHOTAS.ModeProfileWindow.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SierraHOTAS.ModeProfileWindow"
        mc:Ignorable="d"
        Title="Mode Profile Message" Height="130" Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="txtMessage" VerticalAlignment="Center" Style="{StaticResource ModeActivationTextBlock}" HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Click="ButtonBase_OnClick" Content="Continue" Width="80" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Background="{StaticResource HoverBorderBrush}" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource NormalBorderBrush}"/>

    </Grid>
</Window>
