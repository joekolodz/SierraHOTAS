<UserControl x:Class="SierraHOTAS.Controls.QuickProfilePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:SierraHOTAS.ViewModels"
             d:DataContext="{d:DesignInstance viewModel:QuickProfilePanelViewModel}"
             xmlns:local="clr-namespace:SierraHOTAS.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="44" d:DesignWidth="536">

    <StackPanel Name="MainPanel" Orientation="Horizontal" Background="{StaticResource WindowBackgroundBrush}">
    
        <TextBlock Text="Quick Load Profiles:" Foreground="{StaticResource TextBrush}" TextWrapping="Wrap" Width="60" TextAlignment="Right" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <local:QuickProfileButton Margin="15,0,0,0"/>
        <local:QuickProfileButton Margin="15,0,0,0"/>
        <local:QuickProfileButton Margin="15,0,0,0"/>
        <local:QuickProfileButton Margin="15,0,0,0"/>
        <local:QuickProfileButton Margin="15,0,0,0"/>

    </StackPanel>
</UserControl>
