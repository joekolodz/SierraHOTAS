<UserControl x:Class="SierraHOTAS.Controls.LinearAxisMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SierraHOTAS.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="122">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <Grid>
                <Canvas Name="canvas_axis_bar" Height="18" Width="120"/>
            </Grid>
            <CheckBox Name="chkIsDirectional" Content="Directional" IsChecked="{Binding IsDirectional}" Height="15" Foreground="Azure" Margin="1"/>
        </StackPanel>
        <TextBox Name="txtSegments" Text="{Binding Segments}" Height="18" Width="22"/>
    </StackPanel>
</UserControl>
