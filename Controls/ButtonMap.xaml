<UserControl x:Class="SierraHOTAS.Controls.ButtonMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SierraHOTAS.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="600">

    <StackPanel Orientation="Horizontal" Margin="10">
        <StackPanel Orientation="Vertical">
            <local:MacroTransport VerticalContentAlignment="Top"/>
        </StackPanel>
        <local:KeypressActions VerticalContentAlignment="Center" HorizontalAlignment="Stretch"/>
    </StackPanel>

</UserControl>
